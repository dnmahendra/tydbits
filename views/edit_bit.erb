<div class="container">
<form role="form" action="/bits/<%= @bit.id %>" method="post" accept-charset="utf-8" enctype="multipart/form-data">
<input type="hidden" name="_method" value="put">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" name="name" value="<%= @bit.name %>">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <input type="text" class="form-control" name="description" value="<%= @bit.description %>">
  </div>
<div class="form-group">
  <label for="">Select list:</label>
  <select class="form-control" name="category_id" value="<%= @bit.category_id %>">
		<% @categories.each do |c| %>
			<option value="<%= c['id'] %>" <%= c['id'] ==  @bit['category_id'] ? 'selected' : '' %>><%= c['name'] %></option>
		<% end %>
  </select>
</div>
<div class="form-group">
<label for="">change bit:</label>
  <div class="input-group">
    <input type="text"  class="form-control" value="<%= @bit.url %>" readonly>
      <span class="input-group-btn">
        <span class="btn btn-primary btn-file">
          Browse&hellip; <input type="file" name="file">
        </span>
      </span>
  </div>
</div>
<div class="form-group">
  <label for="">change Avatar:</label>
    <div class="input-group">
      <input type="text"  class="form-control" value="<%= @bit.thumbnail %>" readonly>
      <span class="input-group-btn">
        <span class="btn btn-primary btn-file">
          Browse&hellip; <input type="file" name="avatar">
        </span>
      </span>
  </div>
</div>
  <button type="submit" class="btn btn-warning">Update  &uarr;</button>
</form>
</div>