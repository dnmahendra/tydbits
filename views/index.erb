<nav class="navbar navbar-default">
	<div class="container">
		<div class="navbar-header">
			<ul class="nav navbar-nav">
      			<% @categories.each do |c| %>
        		<li><a href="#"><%= c.name %></a></li>
      			<% end %>
     		</ul>
		</div>
	</div>
</nav>


<div class="container">
	<div class="row">
		<% @bits.each do |b| %>
			<div class="col-md-3 col-sm-6">
	           	<audio class="audios" controls
					<source src="<%= b.url %>" type="audio/mpeg">
				</audio>
	            <div class="card-img-top"> 
	             	<img src="<%= b.thumbnail ? b.thumbnail : 'http://placehold.it/200x200' %>" alt="">
	            </div>

	        	<div class="card-block">
		        	<h4 class="card-title"><%= b.name %></h4>
		        	<p class="card-text"><%= b.description %></p>
		        	<form class="likes" action="/likes/<%= b.id %>" method="post">
		        		<p><button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span><%= b.likes.count %></button></p>
		        	</form>
	      		</div>
	    	</div>
    	<% end %>
	</div>
</div>